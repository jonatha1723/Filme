<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Double - Atualização</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 20px;
    }
    .chat-container {
      max-width: 500px;
      margin: 0 auto;
      background: #fff;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0px 2px 10px rgba(0,0,0,0.2);
    }
    .chat-message {
      background: #007bff;
      color: #fff;
      padding: 10px 15px;
      border-radius: 20px;
      margin: 10px 0;
      display: inline-block;
    }
    .update-button {
      display: block;
      margin-top: 10px;
      padding: 10px 20px;
      background-color: #28a745;
      color: #fff;
      text-decoration: none;
      border-radius: 20px;
      text-align: center;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="chat-container">
    <div class="chat-message" id="update-message">
      Uma nova versão do Double está disponível!
    </div>
    <a href="https://doubleds.vercel.app/downloads/double.apk" id="update-button" class="update-button">
      Baixar Atualização
    </a>
  </div>

  <script>
    // Configurações de versão
    const latestVersion = "1.2.0";
    const apkUrl = "https://doubleds.vercel.app/downloads/double.apk";
    const updateMessage = "Nova versão disponível! Clique para atualizar.";

    // Função para notificar o app Android via JS bridge
    function notifyApp() {
      if (window.AndroidApp && typeof window.AndroidApp.notifyUpdate === "function") {
        window.AndroidApp.notifyUpdate(latestVersion, apkUrl, updateMessage);
      }
    }

    // Exibe mensagem de atualização tipo chat
    const messageDiv = document.getElementById("update-message");
    messageDiv.innerText = updateMessage;

    const updateBtn = document.getElementById("update-button");
    updateBtn.href = apkUrl;

    // Envia notificação para app automaticamente ao carregar
    window.onload = function() {
      notifyApp();
    }

    // Pode atualizar versão dinamicamente do JSON se quiser
    async function checkVersion() {
      try {
        const res = await fetch('https://doubleds.vercel.app/version.json');
        const data = await res.json();
        if (data.latest_version !== latestVersion) {
          messageDiv.innerText = data.message;
          updateBtn.href = data.update_url;
          notifyApp();
        }
      } catch (err) {
        console.error("Erro ao verificar versão:", err);
      }
    }

    // Verifica versão a cada 5 minutos
    setInterval(checkVersion, 300000);
  </script>
</body>
</html>